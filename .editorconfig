root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 4
trim_trailing_whitespace = true

[{*.ats,*.cts,*.mts,*.ts}]
indent_size = 2
tab_width = 2

[{*.cjs,*.js,*.mjs}]
indent_size = 2
tab_width = 2

[*.{yml, yaml}]
indent_size = 2

[*.md]
trim_trailing_whitespace = false
